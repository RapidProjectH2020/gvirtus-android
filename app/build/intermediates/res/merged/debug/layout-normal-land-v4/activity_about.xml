<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="eu.project.rapid.gvirtus.gvirtus4a.About"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/logo"
                android:layout_margin="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rapid"
                android:id="@+id/textView5"
                android:textStyle="bold|italic"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:layout_alignTop="@+id/imageView3"
                android:layout_alignBottom="@+id/imageView3"
                android:layout_toRightOf="@+id/imageView3"
                android:gravity="center" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:id="@+id/imageView2"
                android:layout_alignParentTop="false"
                android:layout_alignParentRight="true"
                android:src="@drawable/about1"
                android:layout_alignBottom="@+id/imageView3" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rapidtext"
            android:id="@+id/ab_txt1"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/imageView2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView4"
                android:src="@drawable/logoparth"
                android:layout_below="@+id/ab_txt1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GVirtuS for Android"
                android:id="@+id/textView6"
                android:layout_toRightOf="@+id/imageView4"
                android:layout_alignTop="@+id/imageView4"
                android:layout_alignBottom="@+id/imageView4"
                android:gravity="center"
                android:textStyle="bold|italic"
                android:textSize="20dp"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gvirtustext"
            android:id="@+id/ab_txt2"
            android:layout_below="@+id/imageView4"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/eustring"
            android:id="@+id/textView7"
            android:layout_alignParentBottom="true"
            android:textStyle="bold"
            android:textColor="#0015b0"
            android:textAlignment="center"
            android:layout_marginTop="30dp" />
    </LinearLayout>
</ScrollView>